
{% extends 'base.html.twig' %}

{% block title %}Nowy przedmiot{% endblock %}

{% block body %}
<div class="container">
    <ol class="breadcrumb p-0">
        <li class="breadcrumb-item"><a href="#">Strona główna</a></li>
        <li class="breadcrumb-item"><a href="#">{{ subjectName.content }}</a></li>
        <li class="breadcrumb-item active"><a href="#">Nowa grupa</a></li>
    </ol>
    <h1 class="mb-3">Istniejące grupy</h1>
    {% if groups %}
        {{ include('/subject_group/existing-groups-table.html.twig') }}
    {% else %}
        <div class="alert alert-dismissible alert-danger">
            <strong>Nie znaleziono żadnych grup.</strong>
        </div>
    {% endif %}   

    <h1 class="mt-5 mb-3">Nowa grupa</h1>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}