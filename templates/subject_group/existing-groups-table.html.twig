<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nazwa</th>
            <th scope="col">Opcje</th>
        </tr>
    </thead>
    <tbody>
        {% for group in groups %}
            <tr class='clickable-row'>
                <th scope="row">{{ group.id }}</th>
                <td>{{ group.name }}</td>
                <td>
                    <div class="btn-group" role="group">
                        {% if is_granted('ROLE_TEACHER') %}
                            {% if subjectName is defined %}
                                <a href="/subject/{{ subjectName.id }}/group/{{ group.id }}/add" class="btn btn-primary btn-sm mr-1"/>Dodaj</a>
                            {% else %}
                                <a href="group/{{ group.id }}/edit" class="btn btn-secondary btn-sm mr-1"/>Edytuj</a>
                                <a href="group/{{ group.id }}/remove" class="btn btn-danger btn-sm"/>Usu≈Ñ</a>
                            {% endif %}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>