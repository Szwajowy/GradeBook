{% extends 'base.html.twig' %}

{% block title %}{{ subjectName.content }}{% endblock %}

{% block body %}
<div class="container">
    <ol class="breadcrumb p-0">
        <li class="breadcrumb-item"><a href="#">Strona główna</a></li>
        <li class="breadcrumb-item active"><a href="#">{{ subjectName.content }}</a></li>
    </ol>
    <div class="d-flex flex-row justify-content-between mb-3">
        <h1>Grupy</h1>
        <div class="btn-group" role="group">
            {% if is_granted('ROLE_TEACHER') %} 
            <a href="/subject/{{ subjectName.id }}/group/new" class="btn btn-primary btn-md mr-1"/>Dodaj</a>
            {% endif %}
        </div>
    </div>

    {% if subjectGroups %}
        {{ include('/subject/group-table.html.twig') }}
    {% else %}
        <div class="alert alert-dismissible alert-danger">
            <strong>Nie znaleziono żadnych grup.</strong>
        </div>
    {% endif %}   
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function($) {
            $(".clickable-row").click(function() {
                window.document.location = $(this).data("href");
            });
        });
    </script>
{% endblock %}